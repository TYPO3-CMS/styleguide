				</TCEforms>
				<type>array</type>
				<el>
					<input_2>
						<TCEforms>
							<label>input_2 with select wizard</label>
							<config>
								<type>input</type>
								<wizards>
									<!-- @TODO: This picker is broken ... fix it and test all other wizards -->
									<valuePicker>
										<type>select</type>
										<mode></mode>
										<items>
											<numIndex index="0">
												<numIndex index="0">Foo</numIndex>
												<numIndex index="1">foo</numIndex>
											</numIndex>
											<numIndex index="1">
												<numIndex index="0">Bar</numIndex>
												<numIndex index="1">bar</numIndex>
											</numIndex>
										</items>
									</valuePicker>
								</wizards>
							</config>
						</TCEforms>
					</input_2>

					<input_3>
						<TCEforms>
							<label>input_3 with wizard</label>
							<config>
								<type>input</type>
								<size>50</size>
								<max>256</max>
								<eval>trim</eval>
								<softref>typolink</softref>
								<wizards type="array">
									<link type="array">
										<type>popup</type>
										<title>Link</title>
										<icon>EXT:backend/Resources/Public/Images/FormFieldWizard/wizard_link.gif</icon>
										<module type="array">
											<name>wizard_element_browser</name>
											<urlParameters type="array">
												<mode>wizard</mode>
											</urlParameters>
										</module>
										<JSopenParams>width=800,height=600,status=0,menubar=0,scrollbars=1</JSopenParams>
									</link>
								</wizards>
							</config>
						</TCEforms>
					</input_3>

					<text_1>
						<TCEforms>
							<label>text_1 cols=20, rows=2, wrap=virtual, default text, required</label>
							<config>
								<type>text</type>
								<wrap>virtual</wrap>
								<default>This textbox has wrap set to "virtual", so these long paragraphs should appear in multiple lines (wrapped at the end of the textbox): Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean non luctus elit. In sed nunc velit. Donec gravida eros sollicitudin ligula mollis id eleifend mauris laoreet. Donec turpis magna, pulvinar id pretium eu, blandit et nisi. Nulla fac</default>
								<cols>20</cols>
								<rows>2</rows>
								<!-- @TODO: eval required broken here?! -->
								<eval>required</eval>
							</config>
						</TCEforms>
					</text_1>


					<check_1>
						<TCEforms>
							<label>check_1 3 items, cols=2, number 2 pre-selected</label>
							<config>
								<type>check</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">Foo</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Bar</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">FooBar</numIndex>
									</numIndex>
								</items>
								<default>2</default>
							</config>
						</TCEforms>
					</check_1>


					<radio_1>
						<TCEforms>
							<label>radio_1 2 items, second pre-selected</label>
							<config>
								<type>radio</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">Foo</numIndex>
										<numIndex index="1">1</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Bar</numIndex>
										<numIndex index="1">2</numIndex>
									</numIndex>
								</items>
								<!-- @TODO: default does not seem to work here?! -->
								<default>2</default>
							</config>
						</TCEforms>
					</radio_1>


					<select_1>
						<TCEforms>
							<label>select_1 items with icons, iconsInOptionTag</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">Icon using EXT:</numIndex>
										<numIndex index="1">foo</numIndex>
										<numIndex index="2">EXT:styleguide/Resources/Public/Icons/tx_styleguide_forms.svg</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Icon from typo3/gfx</numIndex>
										<numIndex index="1">es</numIndex>
										<!-- @TODO: This breaks if the tag content is in an own line ... trim() missing? Seems to be a general problem on numIndex fields! -->
										<numIndex index="2">
											flags/es.gif
										</numIndex>
									</numIndex>
								</items>
								<iconsInOptionTags>1</iconsInOptionTags>
							</config>
						</TCEforms>
					</select_1>
					<select_2>
						<TCEforms>
							<label>select_2 renderMode=checkbox with icons, maxitems=1</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">foo 1</numIndex>
										<numIndex index="1">1</numIndex>
										<numIndex index="2"></numIndex>
										<numIndex index="3">optional description</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">foo 2</numIndex>
										<numIndex index="1">2</numIndex>
										<numIndex index="2">EXT:styleguide/Resources/Public/Icons/tx_styleguide_forms.svg</numIndex>
										<numIndex index="3">other description</numIndex>
									</numIndex>
								</items>
								<renderMode>checkbox</renderMode>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</select_2>
					<select_3>
						<TCEforms>
							<label>select_3 renderMode=tree</label>
							<config>
								<type>select</type>
								<foreign_table>pages</foreign_table>
								<size>20</size>
								<maxitems>4</maxitems>
								<renderMode>tree</renderMode>
								<treeConfig>
									<expandAll>1</expandAll>
									<parentField>pid</parentField>
									<appearance>
										<showHeader>1</showHeader>
									</appearance>
								</treeConfig>
							</config>
						</TCEforms>
					</select_3>
					<select_4>
						<TCEforms>
							<label>select_4 multi, enableMultiSelectFilterTextfield, multiSelectFilterItems, wizards</label>
							<config>
								<type>select</type>
								<foreign_table>tx_styleguide_forms_staticdata</foreign_table>
								<rootLevel>1</rootLevel>
								<size>5</size>
								<autoSizeMax>5</autoSizeMax>
								<minitems>0</minitems>
								<maxitems>999</maxitems>
								<enableMultiSelectFilterTextfield>1</enableMultiSelectFilterTextfield>
								<multiSelectFilterItems>
									<numIndex index="0">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">foo</numIndex>
										<numIndex index="1">foo</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">bar</numIndex>
										<numIndex index="1">bar</numIndex>
									</numIndex>
								</multiSelectFilterItems>
								<wizards>
									<_PADDING>1</_PADDING>
									<_VERTICAL>1</_VERTICAL>
									<edit>
										<!-- @TODO: popup closes immediatly?! -->
										<type>popup</type>
										<title>edit</title>
										<module>
											<name>wizard_edit</name>
										</module>
										<icon>EXT:backend/Resources/Public/Images/FormFieldWizard/wizard_edit.gif</icon>
										<popup_onlyOpenIfSelected>1</popup_onlyOpenIfSelected>
										<JSopenParams>height=350,width=580,status=0,menubar=0,scrollbars=1</JSopenParams>
									</edit>
									<add>
										<type>script</type>
										<title>add</title>
										<icon>EXT:backend/Resources/Public/Images/FormFieldWizard/wizard_add.gif</icon>
										<module>
											<name>wizard_add</name>
										</module>
										<params>
											<table>tx_styleguide_forms_staticdata</table>
											<pid>0</pid>
											<setValue>prepend</setValue>
										</params>
									</add>
									<list>
										<type>script</type>
										<title>liste</title>
										<icon>EXT:backend/Resources/Public/Images/FormFieldWizard/wizard_list.gif</icon>
										<module>
											<name>wizard_list</name>
										</module>
										<params>
											<table>tx_styleguide_forms_staticdata</table>
											<pid>0</pid>
										</params>
									</list>
								</wizards>
							</config>
						</TCEforms>
					</select_4>


					<group_1>
						<TCEforms>
							<label>group_1 internal_type=db, suggest wizard</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_styleguide_forms_staticdata</allowed>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</group_1>
					<group_2>
						<TCEforms>
							<label>group_2 internal_type=file</label>
							<config>
								<type>group</type>
								<internal_type>file</internal_type>
								<allowed>jpg</allowed>
								<size>3</size>
								<uploadfolder>uploads/pics</uploadfolder>
							</config>
						</TCEforms>
					</group_2>
				</el>
			</ROOT>
		</sGeneral>
		<sSections> <!-- @TODO: Could have more combinations, eg. required elements, RTE fields, inline, FAL -->
			<ROOT>
				<TCEforms>
					<sheetTitle>Sections</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<section_1>
						<title>section_1</title>
						<type>array</type>
						<section>1</section>
						<el>
							<container_1> <!-- @TODO: Nesting elements in elements seems to be totally undocumented! -->
								<type>array</type>
								<title>1 Sub elements</title>
								<el>
									<element_1>
										<TCEforms>
											<label>type select</label>
											<config>
												<type>select</type>
												<items>
													<numIndex index="0">
														<numIndex index="0">foo</numIndex>
														<numIndex index="1">foo</numIndex>
													</numIndex>
													<numIndex index="1">
														<numIndex index="0">bar</numIndex>
														<numIndex index="1">bar</numIndex>
													</numIndex>
												</items>
											</config>
										</TCEforms>
									</element_1>
									<element_2>
										<TCEforms>
											<label>type input</label>
											<config>
												<type>input</type>
												<size>16</size>
												<default></default>
											</config>
										</TCEforms>
									</element_2>
									<element_3>
										<TCEforms>
											<label>element_3 group,internal_type=file</label>
											<config>
												<type>group</type>
												<internal_type>file</internal_type>
												<allowed>jpg</allowed>
												<size>3</size>
												<uploadfolder>uploads/pics</uploadfolder>
											</config>
										</TCEforms>
									</element_3>
									<element_4>
										<TCEforms>
											<label>element_4, type=select, renderMode=tree</label>
											<config>
												<type>select</type>
												<foreign_table>pages</foreign_table>
												<size>20</size>
												<maxitems>4</maxitems>
												<renderMode>tree</renderMode>
												<treeConfig>
													<expandAll>1</expandAll>
													<parentField>pid</parentField>
													<appearance>
														<showHeader>1</showHeader>
													</appearance>
												</treeConfig>
											</config>
										</TCEforms>
									</element_4>
								</el>
							</container_1>
							<container_2>
								<type>array</type>
								<title>2 Sub elements</title>
								<el>
									<element_1>
										<TCEforms>
											<label>type text</label>
											<config>
												<type>text</type>
												<rows>6</rows>
												<cols>60</cols>
											</config>
										</TCEforms>
									</element_1>
								</el>
							</container_2>
						</el>
					</section_1>
				</el>
			</ROOT>
		</sSections>
		<sInline>
			<ROOT>
				<TCEforms>
					<sheetTitle>Inline</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<inline_1>
						<TCEforms>
							<label>inline_1 to tt_content</label>
							<config>
								<type>inline</type>
								<foreign_table>tt_content</foreign_table>
							</config>
						</TCEforms>
					</inline_1>
					<fal>
						<TCEforms>
							<label>inline_2 FAL record</label>
							<config>
								<type>inline</type>
								<foreign_table>sys_file_reference</foreign_table>
								<foreign_field>uid_foreign</foreign_field>
								<foreign_sortby>sorting_foreign</foreign_sortby>
								<foreign_table_field>tablenames</foreign_table_field>
								<foreign_match_fields>
									<fieldname>fal</fieldname>
								</foreign_match_fields>
								<foreign_label>uid_local</foreign_label>
								<foreign_selector>uid_local</foreign_selector>
								<foreign_selector_fieldTcaOverride>
									<config>
										<appearance>
											<elementBrowserType>file</elementBrowserType>
											<elementBrowserAllowed>gif,jpg,jpeg,tif,tiff,bmp,pcx,tga,png,pdf,ai</elementBrowserAllowed>
										</appearance>
									</config>
								</foreign_selector_fieldTcaOverride>
								<filter>
									<userFunc>TYPO3\\CMS\\Core\\Resource\\Filter\\FileExtensionFilter->filterInlineChildren</userFunc>
									<parameters type="array">
										<allowedFileExtensions>gif,jpg,jpeg,tif,tiff,bmp,pcx,tga,png,pdf,ai</allowedFileExtensions>
										<disallowedFileExtensions>ai</disallowedFileExtensions>
									</parameters>
								</filter>
								<appearance>
									<useSortable>1</useSortable>
									<headerThumbnail>
										<field>uid_local</field>
										<width>45</width>
										<height>45c</height>
									</headerThumbnail>
									<showPossibleLocalizationRecords>0</showPossibleLocalizationRecords>
									<showRemovedLocalizationRecords>0</showRemovedLocalizationRecords>
									<showSynchronizationLink>0</showSynchronizationLink>
									<showAllLocalizationLink>0</showAllLocalizationLink>
									<enabledControls>
										<info>1</info>
										<new>0</new>
										<dragdrop>1</dragdrop>
										<sort>0</sort>
										<hide>1</hide>
										<delete>1</delete>
										<localize>1</localize>
									</enabledControls>
									<createNewRelationLinkTitle>LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:images.addFileReference</createNewRelationLinkTitle>
								</appearance>
								<behaviour type="array">
									<localizationMode>select</localizationMode>
									<localizeChildrenAtParentLocalization>1</localizeChildrenAtParentLocalization>
								</behaviour>
								<foreign_types type="array">
									<numIndex index="0">
										<showitem>
											--palette--;LLL:EXT:lang/locallang_tca.xlf:sys_file_reference.imageoverlayPalette;imageoverlayPalette,--palette--;;filePalette
										</showitem>
									</numIndex>
									<numIndex index="1">
										<showitem>
											--palette--;LLL:EXT:lang/locallang_tca.xlf:sys_file_reference.imageoverlayPalette;imageoverlayPalette,--palette--;;filePalette
										</showitem>
									</numIndex>
									<numIndex index="2">
										<showitem>
											--palette--;LLL:EXT:lang/locallang_tca.xlf:sys_file_reference.imageoverlayPalette;imageoverlayPalette,--palette--;;filePalette
										</showitem>
									</numIndex>
									<numIndex index="3">
										<showitem>
											--palette--;LLL:EXT:lang/locallang_tca.xlf:sys_file_reference.imageoverlayPalette;imageoverlayPalette,--palette--;;filePalette
										</showitem>
									</numIndex>
									<numIndex index="4">
										<showitem>
											--palette--;LLL:EXT:lang/locallang_tca.xlf:sys_file_reference.imageoverlayPalette;imageoverlayPalette,--palette--;;filePalette
										</showitem>
									</numIndex>
									<numIndex index="5">
										<showitem>
											--palette--;LLL:EXT:lang/locallang_tca.xlf:sys_file_reference.imageoverlayPalette;imageoverlayPalette,--palette--;;filePalette
										</showitem>
									</numIndex>
								</foreign_types>
							</config>
						</TCEforms>
					</fal>
				</el>
			</ROOT>
		</sInline>
	</sheets>
</T3DataStructure>
