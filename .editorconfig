# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# JS/TS-Files
[*.{ts,js}]
indent_size = 2

# JSON-Files
[*.json]
indent_size = 2

# MD-Files
[*.md]
max_line_length = 80

# NEON-Files
[*.neon]
indent_size = 2

# ReST-Files
[*.{rst,rst.txt}]
indent_size = 3
max_line_length = 80

# TypoScript
[*.{typoscript,tsconfig}]
indent_size = 2

# XLF-Files
[*.xlf]
indent_style = tab

# YAML-Files
[*.{yaml,yml}]
indent_size = 2

# .htaccess
[{_.htaccess,.htaccess}]
indent_style = tab
